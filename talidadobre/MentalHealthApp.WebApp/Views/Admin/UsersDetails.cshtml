                    <button class="delete-btn" data="@user.Email">Delete</button>
                    <a style="background:radial-gradient(ellipse at bottom, #a866f1 0%, #577be7 100%);color:white;" href="@Url.Action("EditUser", "Admin", new { email = @user.Email })">Edit</a>
